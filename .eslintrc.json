{
  "root": true,
  "parser": "@typescript-eslint/parser",
  "plugins": [
    "prettier",
    "@typescript-eslint"
  ],
  "extends": [
    "airbnb-base",
    "airbnb-typescript/base"
  ],
  "parserOptions": {
            "project": "./tsconfig.json"    
  },
  "settings": {
    "import/core-modules": ["dayjs"],
    "import/resolver": {
      "node": {
        "extensions": [
          ".js",
          ".jsx",
          ".ts",
          ".tsx"
        ]
      }
    }
  },
  "rules": {
    "import/extensions": [
      "error",
      "ignorePackages",
      {
        "js": "never",
        "jsx": "never",
        "ts": "never",
        "tsx": "never",
        "mjs": "never"
      }
   ],
        "import/prefer-default-export": "off",
        "max-lines": ["error", {"max": 100}],
        "max-len":"off",
        "import/no-extraneous-dependencies": [
          "error",
          {
            "devDependencies": [
              "**/*.stories.*"
            ],
            "peerDependencies": true
          }
        ]
  }
}


