{
    "env": {
        "browser": true,
        "es2021": true
    },
    "extends": [
        "airbnb-base",
        "airbnb-typescript/base",
        "plugin:import/typescript",
        "plugin:prettier/recommended"
    ],
    "overrides": [
    ],
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module",
        "project": "./tsconfig.json"
    },
    "plugins": [
        "react",
        "@typescript-eslint",
        "prettier"
    ],
    "rules": {
        "import/extensions": [
            "error",
            "ignorePackages",
            {
              "js": "never",
              "jsx": "never",
              "ts": "never",
              "tsx": "never",
              "mjs": "never"
            }
         ],
              "import/prefer-default-export": "off",
              "max-lines": ["error", {"max": 100}],
              "max-len":"off",
              "import/no-extraneous-dependencies": [
                "error",
                {
                  "devDependencies": [
                    "**/*.stories.*"
                  ],
                  "peerDependencies": true
                }
              ]
    }
}
